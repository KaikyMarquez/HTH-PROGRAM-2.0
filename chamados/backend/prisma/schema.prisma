generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  role     String   // 'admin', 'tecnico', 'visualizador'
}

model Chamado {
  id        Int      @id @default(autoincrement())
  cliente   String
  estande   String
  problema  String
  local     String
  status    String   @default("aberto") // 'aberto', 'em_andamento', 'resolvido'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tecnicoId Int?
  tecnico   User?    @relation(fields: [tecnicoId], references: [id])
}

model Evento {
  id        Int      @id @default(autoincrement())
  nome      String
  local     String
  data      DateTime
  chamados  Chamado[]
}
